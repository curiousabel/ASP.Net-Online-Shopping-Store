@model BrandViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="col-sm-2 col-xs-12">&nbsp;</div>
<div class="text-center col-sm-8 col-xs-12 sticky-top" >
    <form asp-controller="Brand" asp-action="Index" method="post">
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
        <div class="col-sm-4 col-xs-12">
            <h2>Our Brands</h2>
            <select style="position:relative;padding:5px;" asp-for="Id" asp-items="@Model.GetBrands()"
                    class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none; border:initial">Select Brands</option>
            </select>
        </div>
        <div class="col-sm-3 col-xs-12">&nbsp;</div>
    </form>
    @if (Model.Products != null && Model.Products.Count() > 0)
    {
        <div class="col-xs-11 text-left" style="font-size:large;">
            <h3>Our Products</h3>
        </div>
        foreach (Product item in Model.Products)
        {
            <div  id="item" class="col-sm-3 col-xs-12 text-center pull-left "  style="border:groove;  " >
                <span  class="col-xs-12"><img src="@item.GraphicName"  height="130" width="130"   /></span>
                <span style="font-size:larger;">@item.Description.Substring(0, 10)...</span>
                <div>
                    <span>For Size Info.<br />Click Details</span>
                </div>
                <div style="padding-bottom: 10px;">
                    <a href="" class="btn btn-default" data-id="@item.Id">Details</a>
                </div>
            </div>
        }
    }
</div>